<body>
  <div class="spinner"></div> 
    <div class="bg-content">
      <div class="container">
        <div class="row">
          <div class="span12">
            <%= button_to 'Add a New Photo', new_admin_photo_path, :class => 'btn btn-primary btn-lg', :method => :get%> 
						<h3>List of Photos</h3>
						<% @photos.each do |photo|%>
							<%= image_tag(photo.image.url)%>
							<br>
							<div id="photo-options">
								<%= link_to photo.tag_list,'', :class => 'btn btn-success btn-lg'%>
								<%= button_to 'delete', admin_photo_path(photo), :confirm => 'Are you sure?', :class => 'btn btn-primary btn-lg', :method => :delete%>
							</div>
						<% end%>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
